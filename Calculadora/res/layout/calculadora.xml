<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:background="#121606"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,1,2,3;" >

    <TableRow android:background="#fecd00"
        android:id="@+id/tableRow1"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
       android:layout_weight="1">

        <EditText
            android:id="@+id/txt_visor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:textSize="18dp" 
            android:inputType="numberDecimal"
            android:focusable="false"
            android:text="" ></EditText> 

     </TableRow>

    <TableRow android:background="#121606"
        android:id="@+id/tableRow2"
       android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

        <Button
            android:id="@+id/bt_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8" 
            android:textSize="30dp"/>

        <Button
            android:id="@+id/bt_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9" 
            android:textSize="30dp"/>

        <Button
            android:id="@+id/bt_divi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/" 
            android:textSize="30dp"/>
        

    </TableRow>

    <TableRow android:background="#121606"
        android:id="@+id/tableRow3"
       android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

        <Button
            android:id="@+id/bt_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4" 
            android:textSize="30dp"/>

        <Button
            android:id="@+id/bt_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5" 
            android:textSize="30dp"/>

        <Button
            android:id="@+id/bt_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6" 
            android:textSize="30dp"/>

        <Button
            android:id="@+id/bt_mult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*" 
            android:textSize="30dp"/>

    </TableRow>

    <TableRow android:background="#121606"
        android:id="@+id/tableRow4"
        android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

        <Button
            android:id="@+id/bt_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2" 
            android:textSize="30dp"/>

        <Button
            android:id="@+id/bt_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/bt_subt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-" 
            android:textSize="30dp"/>

    </TableRow>

    <TableRow android:background="#121606"
        android:id="@+id/tableRow5"
        android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

        <Button
            android:id="@+id/bt_ponto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="." 
            android:textSize="30dp"/>

        <Button
            android:id="@+id/bt_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0" 
            android:textSize="30dp"/>

        <Button
            android:id="@+id/bt_igual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="=" 
            android:textSize="30dp"/>

        <Button
            android:id="@+id/bt_soma"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+" 
            android:textSize="30dp"/>

    </TableRow>

    <TableRow android:background="#121606"
        android:id="@+id/tableRow6"
      android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:weightSum="4">

        <Button
            android:id="@+id/bt_c"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="C" 
            android:textSize="30dp"/>

        <Button
            android:id="@+id/bt_sair"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Sair" 
            android:textSize="30dp"/>

    </TableRow>

</TableLayout>
